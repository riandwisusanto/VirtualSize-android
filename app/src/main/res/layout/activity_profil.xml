<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityProfil">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarProfil"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Profil"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarProfil"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="100dp"
                app:cardBackgroundColor="@android:color/transparent"
                android:id="@+id/gambarProfil"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_margin="20dp"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/imgProfil"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/gambarProfil"
                android:layout_marginHorizontal="20dp"
                android:background="#dddddd"/>

            <TextView
                android:id="@+id/namaProfil"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/gambarProfil"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:text="Nama :"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#dddddd"
                android:id="@+id/textNamaProfil"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/namaProfil"
                android:layout_marginHorizontal="20dp">
                <TextView
                    android:id="@+id/textNama"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textSize="18dp"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@android:color/black" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/emailProfil"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/textNamaProfil"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:text="Email :"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#dddddd"
                android:id="@+id/textEmailProfil"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/emailProfil"
                android:layout_marginHorizontal="20dp">
                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text=""
                    android:textColor="@android:color/black" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/alamatProfil"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/textEmailProfil"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:text="Alamat :"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#dddddd"
                android:id="@+id/textAlamatProfil"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/alamatProfil"
                android:layout_marginHorizontal="20dp">
                <TextView
                    android:id="@+id/textAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text=""
                    android:textColor="@android:color/black" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/noProfil"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/textAlamatProfil"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginHorizontal="20dp"
                android:text="Nomor Telepon :"
                android:textColor="@android:color/black"
                android:textSize="18sp"/>

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#dddddd"
                android:id="@+id/textNoProfil"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/noProfil"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="20dp">
                <TextView
                    android:id="@+id/textNo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    android:text=""
                    android:textColor="@android:color/black" />
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>