<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome">

    <androidx.appcompat.widget.Toolbar
        app:title="Home"
        android:id="@+id/toolbarHome"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/toolbar"
        android:minHeight="?attr/actionBarSize">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="52dp"
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/box_search">
            <ImageView
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:backgroundTint="#AAAAAA"
                android:background="@drawable/icon_cari" >
            </ImageView>
            <EditText
                android:id="@+id/textSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:hint="Search"
                android:background="@android:color/transparent"
                android:inputType="textShortMessage"
                android:gravity="center_vertical" >
            </EditText>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@id/toolbarHome">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:id="@+id/cardUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <RelativeLayout
                    android:id="@+id/barUpdate"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/itembar">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="UPDATE"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"/>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listPromo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="15dp">
                </androidx.recyclerview.widget.RecyclerView>
            </androidx.cardview.widget.CardView>

            <!--    <RelativeLayout-->
            <!--        android:id="@+id/barUpdate"-->
            <!--        android:layout_width="200dp"-->
            <!--        android:layout_height="35dp"-->
            <!--        android:layout_below="@id/toolbarHome"-->
            <!--        android:layout_marginTop="15dp"-->
            <!--        android:background="@drawable/toolbar">-->
            <!--        <TextView-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="match_parent"-->
            <!--            android:gravity="center"-->
            <!--            android:text="UPDATE"-->
            <!--            android:textColor="@color/colorBlack"-->
            <!--            android:textSize="16dp"/>-->
            <!--    </RelativeLayout>-->

            <!--    <androidx.recyclerview.widget.RecyclerView-->
            <!--        android:id="@+id/listPromo"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:layout_below="@id/barUpdate"-->
            <!--        android:layout_marginTop="10dp"-->
            <!--        android:layout_marginBottom="10dp">-->
            <!--    </androidx.recyclerview.widget.RecyclerView>-->

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="30dp"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardUpdate"
                android:layout_marginVertical="20dp">
                <RelativeLayout
                    android:id="@+id/barKategori"
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/itembar">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="KATEGORI"
                        android:textColor="@color/colorBlack"
                        android:textSize="16dp"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp">
                    <LinearLayout
                        android:id="@+id/kontenHome1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginHorizontal="10dp">
                        <LinearLayout
                            android:id="@+id/menu1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="50dp"
                                app:cardBackgroundColor="@android:color/transparent"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center_horizontal">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/white"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/menu_handphone"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/jenisProduk1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:text="Handphone"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/menu2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="50dp"
                                app:cardBackgroundColor="@android:color/transparent"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center_horizontal">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/white"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/menu_laptop"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/jenisProduk2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:text="Laptop"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/menu3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="50dp"
                                app:cardBackgroundColor="@android:color/transparent"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center_horizontal">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/white"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/menu_tab"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/jenisProduk3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:text="Tab"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/kontenHome2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/kontenHome1"
                        android:layout_marginBottom="10dp"
                        android:layout_marginHorizontal="10dp">
                        <LinearLayout
                            android:id="@+id/menu4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="50dp"
                                app:cardBackgroundColor="@android:color/transparent"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center_horizontal">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/white"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/menu_smartwatch"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/jenisProduk4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:text="Smartwatch"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/menu5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="50dp"
                                app:cardBackgroundColor="@android:color/transparent"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center_horizontal">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/white"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/menu_komputer"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/jenisProduk5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:text="Komputer"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/menu6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_margin="5dp"
                            android:orientation="vertical">
                            <androidx.cardview.widget.CardView
                                app:cardCornerRadius="50dp"
                                app:cardBackgroundColor="@android:color/transparent"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_gravity="center_horizontal">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/white"
                                    android:adjustViewBounds="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/menu_aksesoris"/>
                            </androidx.cardview.widget.CardView>

                            <TextView
                                android:id="@+id/jenisProduk6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="5dp"
                                android:text="Aksesoris"
                                android:textAlignment="center"
                                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>